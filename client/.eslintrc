{
    "parser": "babel-eslint", // 用babel工具解析js代码
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "commonjs": true
    },
    // 设置解析器选项
    "parserOptions": {
        "ecmaVersion": 6, // es版本
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": "airbnb",
    "rules": {
        "semi": [0],  // 结尾分号
        "react/jsx-filename-extension": [0],
        "react/jsx-indent": [0],
        "indent": [0],
        "import/extensions": [0],
        "jsx-a11y/anchor-is-valid": [0],
        "react/require-default-props": [0],
        "arrow-body-style": [0],
        "no-param-reassign": [0],
        "no-unused-expressions": [0],
        "jsx-quotes": [0],
        "comma-dangle": [0],
        "react/self-closing-comp": [0],
        "no-console": [0],
        "react/forbid-prop-types": [0]
    }
}
